{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        .page-container {
            background-image: url('{{ asset('assets/img/background_commande2.jpg') }}') !important;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            var panier = $('#detailcmd').DataTable({
                "paging": true,
                "stateSave": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/French.json",
                }
            });
        });
    </script>
{% endblock %}
{% block body %}
    <title><h1> Détails de la commande </h1> </title>
    <div class="tab-content" >
        <div class="tab-pane active" id="users" aria-expanded="true">
<div>
    <label  class="card" style="font-size: 30px; align-items: center; color: #f89d13;" >
        Liste Des Commandes
    </label><br>
</div>
            <table id="detailcmd" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>

                    <th>Totale</th>
                    <th>Date</th>
                    <th></th>
                </tr>
                <tbody>
                {% for a in commandes %}

                                <tr>

                                    <td>{{ a.total}}</td>
                                    <td>{{ a.date |date("m/d/Y")     }}</td>
                                    <td>
                                        <a href="{{ path('proceedToPayment', {'idCommande': a.idCommande }) }}" class="btn btn-primary text-white">Commander</a>

                                    </td>
                                </tr>

                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}