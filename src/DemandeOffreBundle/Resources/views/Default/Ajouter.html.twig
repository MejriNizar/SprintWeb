
{%extends 'base.html.twig'  %}
 {% block javascripts %}

{% endblock %}
 {% block body %}

     <li class="breadcrumb-item">
         <h6 align="center" size=""><font size="60px" color="#ff7f50" class="text-center text-ff7f50-opacity-05"><b>Ajouter Demande</b></font></h6>
     </li>


     <div class="site-section bg-light">
         <div class="container">
             <div class="row">
                 <div class="col-md-7 mb-5">




                     {{ form_start(form) }}

                     <div class="row form-group">
                         <div class="col-md-6 mb-3 mb-md-0">
                             <label class="text-black" for="fname">{% trans %}Budget:{% endtrans %}</label>
                             {{ form_widget(form.budget, {'attr': {'class': 'form-control','placeholder':'budget', 'style':'height:80%'} }) }}</br>
                         </div>
                         <div class="col-md-6">
                             <label class="text-black" for="lname">{% trans %}description:{% endtrans %}</label>
                             {{ form_widget(form.description, {'attr': {'class': 'form-control','placeholder':'titre', 'style':'height:80%'} }) }}</br>
                         </div>
                     </div>

                     <div class="row form-group">

                         <div class="col-md-12">
                             <label class="text-black" for="email">{% trans %}DateFin:{% endtrans %}</label>
                            <div class="date">{{ form_widget(form.dateFin) }}</div> </br>
                         </div>
                     </div>
                     <div class="row form-group">
                         <div class="col-md-12">
                             <label class="text-black" for="message">Message</label>


                             <textarea name="message" id="message" cols="30" rows="7" class="form-control" >{{ form_widget(form.description) }}</textarea>
                         </div>
                     </div>



                     <div class="row form-group">
                         <div class="col-md-12">
                             <input type="submit" value="Ajouter Offre" class="btn btn-primary py-2 px-4 text-white">
                         </div>

                     </div>

                     {{ form_end(form) }}

                 </div>

             </div>
         </div>
     </div>

 {% endblock %}