{% block javascripts %}
{{ parent() }}
<script>
    $('#fos_user_registration_form_roles_0').on('change', function (){
		
        if ($(this).val() == 'ROLE_ORGANISATEUR') {
            $('#type').removeClass('hidden');
            $('#description').removeClass('hidden');
        } else {
            $('#type').addClass('hidden');
            $('#description').addClass('hidden');
        }
        if ($(this).val() == 'ROLE_VOYAGEUR') {
            $('#voyageur').removeClass('hidden');

        } else {
            $('#voyageur').addClass('hidden');


        }
        if ($(this).val() == 'ROLE_GUIDE') {
            $('#guide').removeClass('hidden');

        } else {
            $('#guide').addClass('hidden');

        }

        if ($(this).val() == 'ROLE_FAMILLE') {
            $('#famille').removeClass('hidden');

        } else {
            $('#famille').addClass('hidden');

        }
    });
</script>
