{% extends "base.html.twig" %}

{% block header %}
    <!-- home -->
    <div id="home">
        <!-- banner -->
        <div class="banner_w3lspvt">
            <!-- nav -->
            <div class="nav_w3ls pt-4 pb-3 text-center">
                <nav>
                    <label for="drop" class="toggle">Menu</label>
                    <input type="checkbox" id="drop"/>
                    <ul class="menu">
                        <li><a href="index.html" class="active">Accueil</a></li>
                        <li><a href="#desti">Programmes</a></li>
                        <li>
                            <!-- First Tier Drop Down -->
                            <label for="drop-2" class="toggle toogle-2">Evenement<span class="fa fa-angle-down"
                                                                                       aria-hidden="true"></span>
                            </label>
                            <a href="#">Evenements<span class="fa fa-angle-down" aria-hidden="true"></span></a>
                            <input type="checkbox" id="drop-2"/>
                            <ul class="text-left">
                                <li><a href="#about" class="drop-text">Voyage</a></li>
                                <li><a href="#what" class="drop-text">Randonnée</a></li>
                                <li><a href="#blog" class="drop-text">Excursion</a></li>
                                <li><a href="single.html" class="drop-text">Camping</a></li>
                            </ul>
                        </li>
                        <li><a href="gallery.html">Galerie</a></li>
                        <li><a href="contact.html">Produit</a></li>
                        <li><a href="contact.html">Guide</a></li>
                        <li><a href="contact.html">Annonce</a></li>
                    </ul>
                </nav>
            </div>

            <!-- //nav -->
            <div class="banner-text text-right">
                <div class="formulaire_log">

                    <h2 class="sub-head">Identifiez-vous</h2>
                    {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form action="{{ path('fos_user_security_check') }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="icon1">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <input type="text" id="username" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" name="_username" value="{{ last_username }}" required="required" autofocus/>
                        </div>
                        <div class="icon1">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                            <input type="password" id="password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" name="_password" required="required" />
                        </div>
                        <label class="anim">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <span>{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</span>
                        </label>
                        <div class="clear"></div>
                        <div class="bottom">
                            <a href="">
                                <input type="submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                            </a>

                            <br/>
                            <br/>
                            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
                        </div>

                    </form>
                </div>
                <div class="banner-bot">
                    <h1><a href="index.html" class="logo text-wh">World_Friendship</a></h1>
                    <p class="text-bl text-li mt-3 border-bottom pb-4">Voyager sans rencontrer l'autre, ce n'est pas
                        voyager, c'est se déplacer. </p>


                </div>
            </div>
        </div>
        <!-- //banner -->
    </div>
    <!-- //home -->
{% endblock %}

